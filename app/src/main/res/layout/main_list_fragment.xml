<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/search_bar"
                android:padding="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/textSerachEditText"
                    android:fontFamily="@font/nunito_light"
                    android:hint="@string/searh_placeholder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/searchImg"
                    android:src="@drawable/ic_search_black_24dp"
                    android:background="#00FFFFFF"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/animeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/subtitle_background"
                    android:layout_height="@dimen/_120sdp"/>
                <TextView
                    android:id="@+id/tittleAnimeTextView"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/anime"
                    android:paddingStart="@dimen/_15sdp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/nextAnimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/button_white"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentRight="true"
                    android:text="@string/next"/>
                <Button
                    android:id="@+id/backAnimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/button_white"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_toLeftOf="@id/nextAnimeButton"
                    android:text="@string/back"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/animeRecycler"
                    android:layout_below="@id/tittleAnimeTextView"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/loadingAnime"
                    app:cardCornerRadius="@dimen/_50sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_25sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:scaleType="centerCrop"
                        app:lottie_fileName="loading.json"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="@string/loading"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mangaSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/subtitle_background"
                    android:layout_height="@dimen/_120sdp"/>
                <TextView
                    android:id="@+id/tittleMangaTextView"
                    android:text="@string/manga"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/nextMangaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/button_white"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentRight="true"
                    android:text="@string/next"/>
                <Button
                    android:id="@+id/backMangaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/button_white"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_toLeftOf="@id/nextMangaButton"
                    android:text="@string/back"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mangaRecycler"
                    android:layout_below="@id/tittleMangaTextView"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/loadingManga"
                    app:cardCornerRadius="@dimen/_50sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_25sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:scaleType="centerCrop"
                            app:lottie_fileName="loading.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="@string/loading"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>