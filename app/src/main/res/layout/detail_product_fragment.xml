<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="@drawable/subtitle_background"
            android:layout_height="@dimen/_120sdp"/>
        <Button
            android:id="@+id/youtubeVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/youtube_trailer"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_bold"
            android:textSize="@dimen/_14sdp"
            android:layout_toRightOf="@id/cardViewDetail"/>
        <TextView
            android:id="@+id/productTittle"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/nunito_semi_bold"
            android:textColor="@color/white"
            android:layout_margin="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Tittle"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDetail"
            android:layout_below="@id/productTittle"
            app:cardCornerRadius="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_190sdp">
            <ImageView
                android:id="@+id/coverImage"
                android:transitionName=""
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>